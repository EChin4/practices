void setup() {
  size(800, 800);
}

void draw() {
  fill(255);
  rect(0, 0, 50, 50);  // White rectangle
  
  pushMatrix();
  translate(30, 20);
  fill(0);  
  rect(0, 0, 50, 50);  // Black rectangle
  popMatrix();
  
  fill(100);  
  rect(15, 10, 50, 50);  // Gray rectangle
  
  // translate moves the whole canvas. That's why you need to put that funky weird stuff inside the push and pop matrix?
}
